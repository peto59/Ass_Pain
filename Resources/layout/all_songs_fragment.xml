<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:p4="http://xamarin.com/mono/android/designer"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#082032"
                android:id="@+id/AllSongsMainLayout">


    
    <androidx.appcompat.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/toolbar1"
    >

        <TextView android:layout_width="90dp" android:layout_height="40dp"
                  android:text="Author"
                  android:layout_marginRight="10dp"
                  android:background="@drawable/rounded_button"
                  android:gravity="center"
                  android:textSize="15dp"
                  android:textColor="#ffffff"
                  android:id="@+id/author"
        />
        <TextView android:layout_width="50dp" android:layout_height="40dp"
                  android:text="All"
                  android:layout_marginRight="10dp"
                  android:background="@drawable/rounded_button"
                  android:gravity="center"
                  android:textSize="15dp"
                  android:textColor="#ffffff"
                  android:id="@+id/all_songs"
        />
        <TextView android:layout_width="90dp" android:layout_height="40dp"
                  android:text="Playlists"
                  android:layout_marginRight="10dp"
                  android:background="@drawable/rounded_button"
                  android:gravity="center"
                  android:textSize="15dp"
                  android:textColor="#ffffff"
                  android:id="@+id/playlists"
        />
