<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
              android:gravity="center"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical"
        android:id="@+id/notif_main"
        android:background="@color/abc_decor_view_status_guard"
    >
        <TextView
            android:textColor="@color/abc_decor_view_status_guard_light"
            android:id="@+id/text_view_player_app_name"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"
            android:text="ass pain"
            android:textSize="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

         <TextView
            android:textColor="@color/abc_decor_view_status_guard_light"
            android:id="@+id/text_view_player_song_name"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"
            android:text="夜に駆ける"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

         <TextView
            android:textColor="@color/abc_decor_view_status_guard_light"
            android:id="@+id/text_view_player_author_name"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_height="wrap_content"
            android:text="YOASOBI"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        
    </LinearLayout>

    
    
</LinearLayout>
