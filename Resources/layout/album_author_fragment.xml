<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/album_author_fragment_main"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:gravity="center"
    >
        <TextView android:layout_width="150dp" android:layout_height="wrap_content"
                  android:background="@drawable/white_rounded_label_left"
                  android:text="Artists"
                  android:textColor="#000000"
                  android:layout_marginRight="1dp"
                  android:padding="15dp"
                  android:textAlignment="center"
        />
        <TextView android:layout_width="150dp" android:layout_height="wrap_content"
                  android:background="@drawable/white_rounded_label_right"
                  android:text="Albums"
                  android:textAlignment="center"
                  android:layout_marginLeft="1dp"
                  android:textColor="#000000"
                  
                  android:padding="15dp"
        />
    </LinearLayout>
</RelativeLayout>